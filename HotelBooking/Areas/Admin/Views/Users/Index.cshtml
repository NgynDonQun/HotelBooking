@{
    ViewBag.Title = "Quản lý Tài Khoản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="app-content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">Quản lý Tài Khoản</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="/Admin/Hotel">Admin</a></li>
                    <li class="breadcrumb-item active">Tài Khoản</li>
                </ol>
            </div>
        </div>

        <div class="row mt-3 align-items-end">
            <div class="col-lg-4 col-md-5 col-12 mb-3">
                <label for="searchUser">Tìm kiếm tài khoản:</label>
                <input type="text" class="form-control" id="searchUser" placeholder="Nhập email...">
            </div>

            <div class="col-lg-3 col-md-3 col-12 mb-3">
                <label for="filterRole">Lọc theo vai trò:</label>
                <select class="form-select" id="filterRole">
                    <option value="">-- Tất cả --</option>
                    <option value="admin">Quản trị</option>
                    <option value="customer">Khách hàng</option>
                </select>
            </div>

            <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-3 d-flex align-items-end">
                <a href="/Admin/Users/Create" class="btn btn-success w-100">
                    + Thêm tài khoản mới
                </a>
            </div>
        </div>

        <!-- BẢNG + PHÂN TRANG (đồng bộ hoàn toàn với trang Room) -->
        <div class="card shadow-sm mt-4">
            <div class="table-responsive">
                <table id="tbl_users" class="table table-bordered table-striped table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Vai trò</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Đang tải...</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Footer giống hệt trang Room -->
            <div class="card-footer bg-white border-top-0">
                <div class="d-flex justify-content-between align-items-center py-2">
                    <small class="text-muted">
                        Hiển thị <strong id="resultCount">0</strong> / <strong id="totalCount">0</strong> tài khoản
                    </small>
                    <nav>
                        <ul class="pagination pagination-sm mb-0" id="pagination"></ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <script>
        var url_domain = window.location.origin;
        var searchTimeout;
        let allUsers = [];
        let filteredUsers = [];
        const pageSize = 10;
        let currentPage = 1;

        $(document).ready(function () {
            loadUsers();

            $("#searchUser").on("keyup", function () {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(loadUsers, 300);
            });

            $("#filterRole").on("change", loadUsers);
        });

        function loadUsers() {
            var keyword = $("#searchUser").val().trim();
            var role = $("#filterRole").val();
            var url = url_domain + '/Admin/Users/GetAllUsers';
            if (keyword !== "") url += '?keyword=' + encodeURIComponent(keyword);
            if (role !== "") url += (keyword !== "" ? '&' : '?') + 'role=' + role;

            $("#tbl_users tbody").html('<tr><td colspan="6" class="text-center py-5"><div class="spinner-border text-primary"></div></td></tr>');

            $.ajax({
                type: "GET",
                url: url,
                success: function (res) {
                    if (res.success && res.data) {
                        allUsers = res.data;
                        filteredUsers = res.data;
                        currentPage = 1;
                        renderTable();
                    } else {
                        $("#tbl_users tbody").html('<tr><td colspan="6" class="text-center text-danger py-4">Lỗi tải dữ liệu</td></tr>');
                        $("#resultCount").text('0');
                        $("#totalCount").text('0');
                        $("#pagination").html('');
                    }
                },
                error: function () {
                    $("#tbl_users tbody").html('<tr><td colspan="6" class="text-center text-danger py-4">Lỗi kết nối server</td></tr>');
                    $("#resultCount").text('0');
                    $("#totalCount").text('0');
                    $("#pagination").html('');
                }
            });
        }

        function renderTable() {
            const start = (currentPage - 1) * pageSize;
            const end = start + pageSize;
            const data = filteredUsers.slice(start, end);
            let html = '';

            if (data.length === 0) {
                html = '<tr><td colspan="6" class="text-center py-5 text-muted">Không tìm thấy tài khoản nào.</td></tr>';
            } else {
                for (var i = 0; i < data.length; i++) {
                    var u = data[i];
                    var roleText = u.role === "admin" ? "Quản trị" : "Khách hàng";
                    var statusBadge = u.isActive
                        ? '<span class="badge bg-success">Hoạt động</span>'
                        : '<span class="badge bg-secondary">Đã khóa</span>';

                    // Nút Khóa = đỏ như nút Xóa bên Room
                    // Nút Mở khóa = xanh lá
                    var lockBtn = u.isActive
                        ? `<button type="button" class="btn btn-sm btn-danger" onclick="toggleLockUser(${u.id}, false)">Khóa</button>`
                        : `<button type="button" class="btn btn-sm btn-success" onclick="toggleLockUser(${u.id}, true)">Mở khóa</button>`;

                    html += "<tr>";
                    html += "<td>" + (start + i + 1) + "</td>";
                    html += "<td>" + u.id + "</td>";
                    html += "<td>" + u.email + "</td>";
                    html += "<td>" + roleText + "</td>";
                    html += "<td>" + statusBadge + "</td>";
                    html += "<td>";
                    html += "<a href='" + url_domain + "/Admin/Users/Edit/" + u.id + "' class='btn btn-sm btn-warning me-1'>Sửa</a> ";
                    html += lockBtn;
                    html += "</td></tr>";
                }
            }

            $("#tbl_users tbody").html(html);
            $("#resultCount").text(data.length);
            $("#totalCount").text(filteredUsers.length);

            const pages = Math.max(1, Math.ceil(filteredUsers.length / pageSize));
            let pag = '';
            for (let i = 1; i <= pages; i++) {
                pag += `<li class="page-item ${i === currentPage ? 'active' : ''}">
                                <a class="page-link" href="#" onclick="currentPage=${i}; renderTable(); return false;">${i}</a>
                            </li>`;
            }
            $("#pagination").html(pag);
        }

        function toggleLockUser(userId, makeActive) {
            if (confirm(makeActive ? "Bạn có chắc muốn mở khóa tài khoản này?" : "Bạn có chắc muốn khóa tài khoản này?")) {
                $.ajax({
                    type: "POST",
                    url: url_domain + '/Admin/Users/ToggleLockUser',
                    data: JSON.stringify({ id: userId, isActive: makeActive }),
                    contentType: "application/json; charset=utf-8",
                    success: function (res) {
                        if (res.success) {
                            alert(res.message || "Thao tác thành công!");
                            loadUsers();
                        } else {
                            alert("Lỗi: " + res.message);
                        }
                    },
                    error: function () {
                        alert("Lỗi kết nối server!");
                    }
                });
            }
        }
    </script>
}