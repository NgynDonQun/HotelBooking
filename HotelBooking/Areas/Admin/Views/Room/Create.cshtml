@{
    ViewBag.Title = "Thêm phòng mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h2 class="mb-4">Thêm phòng mới</h2>
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white"><h5 class="mb-0">Thông tin phòng</h5></div>
        <div class="card-body">
            <div id="success-message" class="alert alert-success alert-dismissible fade show d-none">
                <span>Thêm phòng thành công!</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <div id="error-message" class="alert alert-danger alert-dismissible fade show d-none">
                <span></span>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>

            <form id="roomForm">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label>Khách sạn <span class="text-danger">*</span></label>
                        <select class="form-select" id="HotelId" required><option value="">-- Chọn khách sạn --</option></select>
                    </div>
                    <div class="col-md-6">
                        <label>Mã loại phòng (Code) <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="Code" placeholder="VD: VIP, STD, DLX" required />
                    </div>
                </div>

                <div class="row g-3 mt-1">
                    <div class="col-md-6">
                        <label>Số phòng <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="RoomNumber" placeholder="VD: 2301, 1102" required />
                        <small class="text-muted">Không được trùng trong cùng khách sạn</small>
                    </div>
                    <div class="col-md-6">
                        <label>Sức chứa (người) <span class="text-danger">*</span></label>
                        <input type="number" class="form-control" id="Capacity" value="2" min="1" required />
                    </div>
                </div>

                <div class="row g-3 mt-1">
                    <div class="col-md-6">
                        <label>Giá mỗi đêm (VNĐ) <span class="text-danger">*</span></label>
                        <input type="number" class="form-control" id="PricePerNight" placeholder="1500000" required />
                    </div>
                    <div class="col-md-6">
                        <label>Mô tả (tùy chọn)</label>
                        <input type="text" class="form-control" id="Description" placeholder="Phòng view biển, ban công..." />
                    </div>
                </div>

                <div class="mt-4">
                    <label class="d-flex justify-content-between align-items-center">
                        <span>Hình ảnh phòng <small class="text-muted">(dán link ảnh trực tiếp)</small></span>
                        <button type="button" class="btn btn-sm btn-outline-primary" id="addImage">+ Thêm ảnh</button>
                    </label>
                    <div id="imageContainer" class="mt-2"></div>
                    <small class="text-muted">Gợi ý: dùng <a href="https://imgbb.com" target="_blank">ImgBB</a> hoặc link Unsplash có đuôi .jpg</small>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-success btn-lg px-5" id="btnSave">Thêm phòng</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg px-5">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
$(function () {
    $.get('@Url.Action("GetHotelsForDropdown")', res => {
        if (res.success) res.data.forEach(h => $('#HotelId').append(`<option value="${h.Id}">${h.Name}</option>`));
    });

    $('#addImage').click(() => {
        $('#imageContainer').append(`
            <div class="input-group mb-2">
                <input type="url" class="form-control" placeholder="https://i.ibb.co/...jpg hoặc https://images.unsplash.com/...jpg" />
                <button type="button" class="btn btn-outline-danger remove-img">X</button>
            </div>`);
    });

    $(document).on('click', '.remove-img', function() { $(this).closest('.input-group').remove(); });

    $('#roomForm').submit(function (e) {
        e.preventDefault();

        const imageUrls = [];
        $('#imageContainer input').each(function () {
            const url = $(this).val().trim();
            if (url && url.match(/\.(jpg|jpeg|png)$/i) || url.includes('unsplash.com')) {
                imageUrls.push(url);
            }
        });

        const data = {
            HotelId: $('#HotelId').val(),
            Code: $('#Code').val().trim().toUpperCase(),
            RoomNumber: $('#RoomNumber').val().trim(),
            Description: $('#Description').val().trim() || null,
            Capacity: +$('#Capacity').val(),
            PricePerNight: +$('#PricePerNight').val(),
            ImageUrls: imageUrls.length ? imageUrls : null
        };

        if (!data.HotelId || !data.Code || !data.RoomNumber || !data.Capacity || !data.PricePerNight) {
            $('#error-message span').text('Vui lòng điền đầy đủ các trường bắt buộc');
            $('#error-message').removeClass('d-none');
            return;
        }

        $('#btnSave').prop('disabled', true).html('Đang lưu...');

        $.ajax({
            url: '@Url.Action("CreateRoom")',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: res => {
                if (res.success) {
                    $('#success-message').removeClass('d-none');
                    setTimeout(() => location.href = '@Url.Action("Index")', 1500);
                } else {
                    $('#error-message span').text(res.message);
                    $('#error-message').removeClass('d-none');
                }
            },
            error: () => $('#error-message span').text('Lỗi server').parent().removeClass('d-none'),
            complete: () => $('#btnSave').prop('disabled', false).html('Thêm phòng')
        });
    });
});
    </script>
}